<%- include('partials/head'); -%>
  <link rel="stylesheet" href="/css/loader.css">
  <body>
    <%- include('partials/nav'); -%>
    <div class="container flex flex-wrap w-full mx-auto px-2 mt-2">
      <div class="w-full mb-6 ">
        <div class="mx-2 h-full p-4 bg-indigo-200 shadow-lg">
          <h3 class="text-center text-2xl text-blue-800 font-bold ">Predict values service</h3>
          <div class="font-thin ">
            <p>Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
              dolore magna aliqua.Consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et
              dolore magnaaliqua.</p>
          </div>
        </div>
      </div>
    </div>
    <div class="flex justify-center ...">
      <div class="w-full sm:w-1/2 md:w-1/2 flex flex-col p-3">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col">
          <div class="p-4 flex-1 flex flex-col text-center">
            <h3 class="mb-2 text-2xl">Physicochemical characteristics service form</h3>
            <div class="mb-4 text-grey-darker flex-1">
              <form action="">
                <div class="mb-4">
                  <label class="block text-gray-700 text-sm font-bold mb-2">Enter the sequences in fasta format
                    <textarea id="fasta"
                      class="shadow form-textarea mt-1 block w-full border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
                      rows="10" placeholder=""></textarea>
                  </label>
                </div>
                <span>Or</span>
                <div class=" w-full py-2 px-3 text-gray-700  focus:outline-none focus:shadow-outline">
                  <label class="block text-gray-700 text- sm font-bold mb-2">
                    <span class="mt-2 text-base leading-normal">Upload a .fasta file
                    </span>
                  </label>
                  <div class="flex w-full justify-center bg-grey-lighter">
                    <label
                      class="w-64 flex flex-col items-center px-4 py-6 bg-white text-blue rounded-lg shadow-lg tracking-wide uppercase border border-blue cursor-pointer">
                      <svg class="w-8 h-8" fill="rgba(165, 180, 252)" xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 20 20">
                        <path
                          d="M16.88 9.1A4 4 0 0 1 16 17H5a5 5 0 0 1-1-9.9V7a3 3 0 0 1 4.52-2.59A4.98 4.98 0 0 1 17 8c0 .38-.04.74-.12 1.1zM11 11h3l-4-4-4 4h3v3h2v-3z" />
                      </svg>
                      <span id="advise" hidden></span>
                      <input type='file' id="file" class="hidden" />
                    </label>
                    <i id="remove_file" class="text-red-500 absolute fas fa-times-circle invisible"></i>
                  </div>
                </div>
                <label class="block text-gray-700 text-sm font-bold mb-2">Types of prediction</label>
                <div class="mb-4">
                  <label class="block">
                    <input id="pfam" class="mr-2 leading-tight" type="checkbox">
                    <span class="text-sm">Pfam</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="block">
                    <input id="gene_ontology" class="mr-2 leading-tight" type="checkbox">
                    <span class="text-sm">Gene ontology</span>
                  </label>
                </div>
                <div class="mb-4">
                  <label class="block">
                    <input id="secondary_structure" class="mr-2 leading-tight" type="checkbox">
                    <span class="text-sm">Secondary structure</span>
                  </label>
                </div>
                <button
                  class="bg-gray-400 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
                  type="button" id="submit" disabled>Submit</button>
              </form>
              <span id="error" hidden>ERROR: Too many fasta sequences!</span>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="loader" hidden><div class="spinner"></div></div>
    <div class="flex justify-center ...">
      <div class="w-full sm:w-full md:w-full flex flex-col p-3" id="results">
        <div class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col">
          <div class="p-4 flex-1 flex flex-col text-center">
            <h3 class="mb-2 text-2xl">Results</h3>
            <div class="mb-4 text-grey-darker flex-1">
              <table id="table-results">
                <thead>
                  <th>Id sequence</th>
                  <th>Sequence</th>
                  <th>Pfam</th>
                  <th>Gene Ontology</th>
                  <th>Secondary Structure</th>
                </thead>
                <tbody></tbody>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="modal_pfam" class="modal" hidden>
      <div class="flex justify-center ...">
        <div class="w-full sm:w-full md:w-full flex flex-col p-3">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col">
            <div class="p-4 flex-1 flex flex-col text-center">
              <h3 class="mb-2 text-2xl">Pfam Predictions</h3>
              <div class="mb-4 text-grey-darker flex-1">
                <table class="table" id="table_pfam">
                  <thead>
                    <tr>
                      <th>Accession</th>
                      <th>Id_accession</th>
                      <th>Type</th>
                      <th>Class</th>
                      <th>E-value</th>
                      <th>Bitscore</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="modal_go" class="modal" hidden>
      <div class="flex justify-center ...">
        <div class="w-full sm:w-full md:w-full flex flex-col p-3">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col">
            <div class="p-4 flex-1 flex flex-col text-center">
              <h3 class="mb-2 text-2xl">Gene Ontology Predictions</h3>
              <div class="mb-4 text-grey-darker flex-1">
                <table class="table" id="table_go">
                  <thead>
                    <tr>
                      <th>Property</th>
                      <th>Id</th>
                      <th>Predicted Value</th>
                    </tr>
                  </thead>
                  <tbody>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
    <div id="modal_second" class="modal" hidden>
      <div class="flex justify-center ...">
        <div class="w-full sm:w-full md:w-full flex flex-col p-3">
          <div class="bg-white rounded-lg shadow-lg overflow-hidden flex-1 flex flex-col">
            <div class="p-4 flex-1 flex flex-col text-center">
              <h3 class="mb-2 text-2xl">Structural Predictions</h3>
              <div class="mb-4 text-grey-darker flex-1">
                <div id="ss3_plot" class="float-left w-1/2 pie_struct"></div>
                <div id="ss3_sequence" class="float-right w-1/2 sequence_couple"></div>
                <div id="diso_plot" class="float-left w-1/2 pie_struct"></div>
                <div id="diso_sequence" class="float-right w-1/2 sequence_couple"></div>
                <div id="ss8_plot" class="float-left w-1/2 pie_struct"></div>
                <div id="ss8_sequence" class="float-right w-1/2 sequence_couple"></div>
                <div id="sac_plot" class="float-left w-1/2 pie_struct"></div>
                <div id="sac_sequence" class="float-right w-1/2 sequence_couple"></div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </body>
  <script type="text/javascript" charset="utf8" src="/js/predict_values.js"></script>